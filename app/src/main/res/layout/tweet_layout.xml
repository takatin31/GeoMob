<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_backgorund"
            android:src="@drawable/dz" />

        <TextView
            android:id="@+id/userNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userImageView"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/userImageView"
            android:fontFamily="@font/roboto_medium"
            android:text="Ali Cherif"
            android:textColor="#1D1D1D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/screenNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userNameView"
            android:layout_toEndOf="@id/userNameView"
            android:fontFamily="@font/roboto_regular"
            android:text="AliCherif" />

        <TextView
            android:id="@+id/tweetContentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameView"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/userImageView"
            android:fontFamily="@font/roboto_regular"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/tweetImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweetContentView"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/userImageView"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_launcher_background" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>