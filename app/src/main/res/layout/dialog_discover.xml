<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/discoverLayout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/discoverCountryFlag"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/af" />

        <TextView
            android:id="@+id/discoverCountryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discoverCountryFlag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:text="TextView"
            android:textColor="#5F5F60"
            android:textSize="24sp" />

        <Button
            android:id="@+id/visitBtnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discoverCountryTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#3768FF"
            android:fontFamily="@font/roboto_medium"
            android:text="Visit now"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/closeDiscoverLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_cancel" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>